<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pwr.projekt.enduroracepilot.activities.MapFragmentActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp">


    <LinearLayout
        android:id="@+id/mapLayoutID"
        android:layout_width="368dp"
        android:layout_height="395dp"

        android:layout_marginBottom="0dp"
        android:layout_marginTop="0dp"
        android:gravity="top|center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/poiPickerLayoutID"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="8dp">


        <fragment
            android:id="@+id/mapFragment"
            class="com.pwr.projekt.enduroracepilot.fragments.MapFragmentPOI"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            tools:layout="@layout/poi_adding_fragment"
            tools:layout_editor_absoluteX="85dp"
            tools:layout_editor_absoluteY="138dp"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/poiPickerLayoutID"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"

        android:gravity="bottom|center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:ignore="MissingConstraints">

        <fragment
            android:id="@+id/poiPickerFragment"
            class="com.pwr.projekt.enduroracepilot.fragments.PoiPickerFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom|center"
            tools:layout="@layout/fragment_poi_picker"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp"/>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>
