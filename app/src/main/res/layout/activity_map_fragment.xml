<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pwr.projekt.enduroracepilot.activities.AddingPoiElementsToRouteActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarPOI"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <LinearLayout
        android:id="@+id/mapLayoutID"
        android:layout_width="368dp"
        android:layout_height="395dp"

        android:gravity="top|center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/poiPickerLayoutID"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="8dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbarPOI">


        <!--<fragment-->
        <!--android:id="@+id/mapFragment"-->
        <!--class="com.pwr.projekt.enduroracepilot.fragments.EditingMapAndAddingPOIFragmentddingPOIFragment"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_weight="1"-->
        <!--tools:layout="@layout/poi_adding_fragment"-->
        <!--tools:layout_editor_absoluteX="85dp"-->
        <!--tools:layout_editor_absoluteY="138dp"/>-->

        <FrameLayout
            android:id="@+id/frameLayoutForPoiMap"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </FrameLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/poiPickerLayoutID"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"

        android:gravity="bottom|center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:ignore="MissingConstraints">

        <FrameLayout
            android:id="@+id/framgePickerLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

        </FrameLayout>
    </LinearLayout>




</android.support.constraint.ConstraintLayout>
